<% layout("/Layouts/boilerplate") %>
<body>
    
    <h2>Create a New Listings</h2>
    <form action="/listings" method="post">
        
        <input type="text" name="title" id="title" placeholder="Enter your title"><br><br>
        <textarea name="description" id="description" placeholder="Enter your description"></textarea><br><br>
        <input type="text" name="image" placeholder="Paste Your img link"><br><br>
        <input type="number" name="price" placeholder="Enter your Price"><br><br>
        <input type="text" name="country" placeholder="Country"><br><br>
        <input type="text" name="location" placeholder="Location"><br><br>
         <button>Submit</button>
    </form>
</body>
