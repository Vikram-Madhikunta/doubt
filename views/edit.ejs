<% layout("/Layouts/boilerplate") %>
<body>
    <h2>Edit the List</h2>
    <div class="md-center">
        <form action="/listings/<%= data.id %>?_method=PUT" enctype="multipart/form-data" method="post" novalidate class="needs-validation">
                <div>
        
            <label for="title" class="form-label">Title</label>
            <input class="form-control"  type="text" name="title" id="title" placeholder="Enter your title" value="<%=  data.title %>" required>
            <div class="valid-feedback">
                looks good 
            </div>
            <div class="invalid-feedback">
               Please provide a valid title.
             </div><br><br>
           </div>
           <div>
            <label for="description" class="form-label">Description</label>       
            <textarea class="form-control" name="description" id="description" placeholder="Enter your description" required> <%= data.description %></textarea>
            <div class="valid-feedback">
                looks good 
            </div>
            <div class="invalid-feedback">
               Please provide a valid description.
             </div><br><br>
           </div>
           <div>
            <label for="Original" class="form-label">Original Image</label>
            <br>
            <img 
                id="Original" 
                src="<%= data.image.url %>" 
                alt="Image of the listing" 
                class="img-fluid rounded"
                style="width: 300px; height: 200px; object-fit: cover;"
            >
           </div>
           <br>
            <div>
            <label for="image" class="form-label">Upload New Image</label>
            <input class="form-control" type="file" id="image" name="image" value="<%= data.image %>" >
            <div class="valid-feedback">
                looks good 
            </div>
            <div class="invalid-feedback">
               Please provide a valid Image.
             </div><br><br>
           </div>
            <div>
                <label for="price" class="form-label">Price</label> 
                <input class="form-control" type="number" id="price" name="price" placeholder="Enter your Price" value="<%= data.price %>" required>
                <div class="valid-feedback">
                    looks good 
                </div>
                <div class="invalid-feedback">
                   Please provide a valid Price.
                 </div><br><br>
            </div>
            <div>
                 <label for="country" class="form-label" >Country</label>
                <input class="form-control" type="text" id="country" name="country" placeholder="Country" value="<%= data.country %>" required>
                <div class="valid-feedback">
                    looks good 
                </div>
                <div class="invalid-feedback">
                   Please provide a valid Country.
                 </div><br><br>
            </div>
            <div>
                <label for="Location" class="form-label" >Location</label>
                <input class="form-control" type="text"  id="Location" name="location" placeholder="Location" value="<%= data.location %>" required>
                <div class="valid-feedback">
                    looks good 
                </div>
                <div class="invalid-feedback">
                   Please provide a valid Location.
                 </div><br><br>
            </div>
    
            <button>Submit</button>

            </form>
    </div>
</body>
